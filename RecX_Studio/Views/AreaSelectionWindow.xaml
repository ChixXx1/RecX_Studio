<Window x:Class="RecX_Studio.Views.AreaSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Выбор области захвата" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowState="Maximized"
        ShowInTaskbar="False"
        Cursor="Cross">
    
    <Canvas x:Name="SelectionCanvas" Background="#01000000">
        <!-- Полупрозрачный оверлей -->
        <Rectangle x:Name="OverlayRect" 
                  Fill="#80000000" 
                  Canvas.Left="0" 
                  Canvas.Top="0"/>
        
        <!-- Область выделения -->
        <Rectangle x:Name="SelectionRect" 
                  Stroke="Red" 
                  StrokeThickness="2"
                  Fill="#40FF0000"
                  Visibility="Collapsed"/>
        
        <!-- Текст с размерами -->
        <Border x:Name="SizeInfoBorder"
                Background="Black"
                CornerRadius="3"
                Padding="5,2"
                Visibility="Collapsed">
            <TextBlock x:Name="SizeInfoText" 
                      Foreground="White"
                      FontWeight="Bold"
                      FontSize="12"/>
        </Border>
        
        <!-- Инструкция -->
        <Border x:Name="InstructionBorder"
                Background="#CC000000"
                CornerRadius="5"
                Padding="10,5"
                Canvas.Left="20"
                Canvas.Top="20">
            <StackPanel>
                <TextBlock Text="Выделите область для захвата" 
                          Foreground="White"
                          FontWeight="Bold"/>
                <TextBlock Text="ESC - отмена" 
                          FontSize="10"
                          Foreground="#CCCCCC"/>
            </StackPanel>
        </Border>
    </Canvas>
</Window>