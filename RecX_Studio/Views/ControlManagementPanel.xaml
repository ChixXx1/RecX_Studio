<UserControl x:Class="RecX_Studio.Views.ControlManagementPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RecX_Studio.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400"
             MinHeight="120" MinWidth="400"
             VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
    
    <UserControl.Resources>
        <Style x:Key="RecordButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButtonStyle}">
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding CurrentState}" Value="Recording">
                    <Setter Property="Background" Value="Cyan"/>
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Border Background="#252526" CornerRadius="5" Margin="0, 0.8, 0, 0.8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" Background="#2D2D30" CornerRadius="3,3,0,0" Padding="5,2">
                <TextBlock Text="Управление" 
                          Foreground="White"
                          FontWeight="Bold"/>
            </Border>

            <!-- Кнопки управления с прокруткой -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         Padding="5">
                <StackPanel Orientation="Vertical">
                    
                    <Button Content="{Binding RecordButtonText}" 
                            Height="35"
                            Width="200"
                            Margin="0,3"
                            Style="{StaticResource RecordButtonStyle}"
                            Click="RecordButton_Click"
                            HorizontalAlignment="Stretch"/>
                    
                    <Button Content="Настройки" 
                            Height="35"
                            Width="200"
                            Margin="0,3"
                            Style="{StaticResource ControlButtonStyle}"
                            Click="Settings_Click"
                            HorizontalAlignment="Stretch"/>
                    
                    <!-- НОВАЯ КНОПКА -->
                    <Button Content="✂️ Открыть редактор" 
                            Height="35"
                            Width="200"
                            Margin="0,3"
                            Style="{StaticResource ControlButtonStyle}"
                            Click="OpenEditorButton_Click"
                            HorizontalAlignment="Stretch"/>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>