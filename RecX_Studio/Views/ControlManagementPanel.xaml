<UserControl x:Class="RecX_Studio.Views.ControlManagementPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RecX_Studio.Views"
             xmlns:converters="clr-namespace:RecX_Studio.Utils"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400"
             MinHeight="120" MinWidth="400"
             VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
    
    <UserControl.Resources>
        <!-- Конвертеры для изменения текста и стиля кнопок -->
        <converters:PauseButtonTextConverter x:Key="PauseButtonTextConverter"/>
        <converters:PauseButtonStyleConverter x:Key="PauseButtonStyleConverter"/>
        <converters:StopButtonStyleConverter x:Key="StopButtonStyleConverter"/>
        
        <!-- Простой и самостоятельный стиль для кнопки записи -->
        <Style x:Key="RecordButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template" Value="{StaticResource ButtonControlTemplate}"/>
            <Style.Triggers>
                <!-- Триггеры только для изменения состояния, без логики наведения -->
                <DataTrigger Binding="{Binding CurrentState}" Value="Idle">
                    <Setter Property="Background" Value="Red"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding CurrentState}" Value="Recording">
                    <Setter Property="Background" Value="Cyan"/>
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding CurrentState}" Value="Paused">
                    <Setter Property="Background" Value="Orange"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Border Background="#252526" CornerRadius="5" Margin="0, 0.8, 0, 0.8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" Background="#2D2D30" CornerRadius="3,3,0,0" Padding="5,2">
                <TextBlock Text="Управление" 
                          Foreground="White"
                          FontWeight="Bold"/>
            </Border>

            <!-- Кнопки управления с прокруткой -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         Padding="5">
                <StackPanel Orientation="Vertical">
                    
                    <!-- Кнопка записи/возобновления -->
                    <Button Content="{Binding RecordButtonText}" 
                            Height="35"
                            Width="200"
                            Margin="0,3"
                            Style="{StaticResource RecordButtonStyle}"
                            Command="{Binding StartRecordingCommand}"
                            HorizontalAlignment="Stretch"/>
                    
                    <!-- Кнопка паузы/возобновления -->
                    <Button Content="{Binding CurrentState, Converter={StaticResource PauseButtonTextConverter}}"
                            Height="35"
                            Width="200"
                            Margin="0,3"
                            Style="{Binding CurrentState, Converter={StaticResource PauseButtonStyleConverter}}"
                            Command="{Binding PauseResumeCommand}"
                            HorizontalAlignment="Stretch"/>
                    
                    <!-- Кнопка остановки -->
                    <Button Content="⏹ Остановить" 
                            Height="35"
                            Width="200"
                            Margin="0,3"
                            Style="{Binding CurrentState, Converter={StaticResource StopButtonStyleConverter}}"
                            Command="{Binding StopRecordingCommand}"
                            HorizontalAlignment="Stretch"/>
                    
                    <Separator Margin="0,10" Background="#5E5E5E" Height="1"/>
                    
                    <Button Content="⚙️ Настройки" 
                            Height="35"
                            Width="200"
                            Margin="0,3"
                            Style="{StaticResource ControlButtonStyle}"
                            Click="Settings_Click"
                            HorizontalAlignment="Stretch"/>
                    
                    <!-- Кнопка открытия редактора -->
                    <Button Content="✂️ Открыть редактор" 
                            Height="35"
                            Width="200"
                            Margin="0,3"
                            Style="{StaticResource ControlButtonStyle}"
                            Click="OpenEditorButton_Click"
                            HorizontalAlignment="Stretch"/>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>